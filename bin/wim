#!/usr/bin/env perl

use 5.010;

my $vim = 'vim';
my $which = 'which';
my $cmd = "$ARGV[0]";

my $usage = sub {
    say "\nName:\twim - opens script in vim w\\o need of PATH\n\nUsage:\twim <script>\n\n\t- script is name of script which must be in your PATH"
};

my $exec = sub {
    system("$vim \`$which $cmd\`");
};

unless( $cmd ){
        $usage->($vim);
} else { $exec->($cmd) }

