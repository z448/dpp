#!/usr/bin/env perl
# build in parallel remotely
use 5.010;
use Net::OpenSSH;
use Term::ANSIColor;

my @hosts = qw( localhost );
my $pm = $ARGV[0];

my $cypm_base = "~/.cypm/pool/cy";
my $cmd = "source ~/.cypm/.env &&  ~/Documents/native-dpp/local/bin/cpanm -n -f --reinstall -L $cypm_base $pm";
#my $cmd = "source ~/.cypm/.env && tar -xvf ~/.mm.tgz && cpanm -n -f --reinstall -L $cypm_base $pm";
#my $cmd = "source ~/.cypm/.env && rm -rf ~/.cypm/pool/usr && tar -xvf .mm.tgz && cpanm -n --force --reinstall -L $cypm_base $pm";

# parallel test; uncoment below and tail /tmp/out-$host.txt on local host
#my $cmd = 'for i in `seq 1 20`;do echo $i;sleep 3;done';

# say info where is command running; put command string into separate line
say "\nrunning:"; print colored( "$cmd\n", 'blue' ); say "on: @hosts ";

my %conn = map { $_ => Net::OpenSSH->new($_, async => 1) } @hosts;
my @pid;
for my $host (@hosts) {
    open my($fh), '>', "/tmp/out-$host.txt"
      or die "unable to create file: $!";
    push @pid, $conn{$host}->spawn({stdout_fh => $fh}, $cmd);
}

waitpid($_, 0) for @pid;
