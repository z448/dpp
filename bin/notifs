#!/usr/bin/env perl

use Filesys::Notify::Simple;
$| = 1;
my $spot=();
if ( -e $ARGV[0]) { $spot eq "$ARGV[0]" } else { $spot eq '.'; }
my $watcher = Filesys::Notify::Simple->new([ "$spot" ]);
#`hostname`;
print "checking $ENV{'PWD'}\n";

while (1) {
        $watcher->wait(sub {
                for my $event (@_) {
                noti($event->{path});
                }
        });
}

sub noti {
        my $path = shift;
        print "$path\n";
}

